<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/purpleBackground"
    android:padding="10dp"
    android:layout_height="150dp">
    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/textViewTitle_Dialog"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:text="Reset Password"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_below="@+id/textViewTitle_Dialog"
        android:id="@+id/editTextReset_Dialog"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:hint="Email"
        android:maxLines="1"
        android:inputType="textEmailAddress"
        android:textColor="@color/yellow"
        android:textColorHint="@color/white"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/buttonConfirm_Dialog"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Confirm"
        android:layout_alignParentBottom="true"
        android:background="@drawable/state_button_register"
        android:layout_height="wrap_content" />

</RelativeLayout>