<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/transparent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/relative_Mine_Chat"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:background="@drawable/speech_bubble_mine"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewMessage_Mine"
            android:layout_width="wrap_content"
            android:maxWidth="320dp"
            android:gravity="right|center_vertical"
            android:minHeight="50dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:minWidth="50dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/relative_Mine_Chat"
        android:layout_marginBottom="5dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:background="@drawable/bubble_status"
        android:layout_height="wrap_content">
        <TextView
            android:visibility="gone"
            android:id="@+id/textViewStatus_Mine"
            android:layout_width="wrap_content"
            android:maxWidth="320dp"
            android:padding="2dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Đã xem"
            android:textColor="@color/white"
            android:minWidth="50dp"
            />
    </RelativeLayout>
</RelativeLayout>